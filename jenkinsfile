pipeline {
    agent any
    tools {
        nodejs 'NodeJS'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChiranjeeviHeggade/Cypress-Cucumber-E2E.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Smoke Tests') {
            steps {
                ansiColor('xterm') {
                    bat 'npm run SMOKE-CUCUMBER-CHROME'
                }
            }
        }
        stage('Archive Cucumber Report') {
            steps {
                archiveArtifacts artifacts: 'cucumber-html-reports/**', fingerprint: true
            }
        }
        stage('Publish Cucumber Report') {
            steps {
                publishHTML (target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'cucumber-html-reports',
                    reportFiles: 'index.html',
                    reportName: 'Cucumber Report'
                ])
            }
        }
        stage('Print Build URL') {
            steps {
                echo "BUILD_URL is: ${env.BUILD_URL}"
            }
        }
    }
    post {
        success {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'good',
                message: "✅ Smoke Tests Passed — ${env.JOB_NAME} #${env.BUILD_NUMBER}\n" 
                    + "<https://six-camels-sneeze.loca.lt/job/${env.JOB_NAME}/${env.BUILD_NUMBER}/artifact/cucumber-html-reports/index.html|View Cucumber Report>"
            )
        }
        failure {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'danger',
                message: "❌ Smoke Tests Failed — ${env.JOB_NAME} #${env.BUILD_NUMBER}"
            )
        }
    }
}
