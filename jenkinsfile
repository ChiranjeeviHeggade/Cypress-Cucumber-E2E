pipeline {
    agent any

    tools {
        nodejs 'NodeJS' // only if you configured NodeJS tool
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChiranjeeviHeggade/Cypress-Cucumber-E2E.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Smoke Tests') {
            steps {
                sh 'npm run REGRESSION-CUCUMBER-CHROME'
            }
        }
    }

    post {
        success {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'good',
                message: "✅ Smoke Tests Passed — ${env.JOB_NAME} #${env.BUILD_NUMBER}"
            )
        }
        failure {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'danger',
                message: "❌ Smoke Tests Failed — ${env.JOB_NAME} #${env.BUILD_NUMBER}"
            )
        }
    }
}
