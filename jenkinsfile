pipeline {
    agent any
    tools {
        nodejs 'NodeJS'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChiranjeeviHeggade/Cypress-Cucumber-E2E.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Smoke Tests') {
            steps {
                ansiColor('xterm') {
                    bat 'npm run SMOKE-CUCUMBER-CHROME'
                }
            }
        }
        stage('Fix Report Base Path') {
            steps {
                script {
                    def baseHref = "${env.BUILD_URL}artifact/cucumber-html-reports/"
                    def indexFile = "cucumber-html-reports\\index.html"
                    echo "üîç Checking for index.html at: ${indexFile}"
                    echo "üîç WORKSPACE: ${env.WORKSPACE}"
                    if (fileExists(indexFile)) {
                        echo "‚úÖ Found index.html"
                        def html = readFile(indexFile)
                        echo "üîç Original content starts with:\n" + html.take(200)
                        if (!html.contains('<base href=')) {
                            html = html.replaceFirst(/<head>/, "<head><base href='${baseHref}'>")
                            writeFile file: indexFile, text: html
                            echo "‚úÖ Successfully injected <base> tag"
                        } else {
                            echo "‚ÑπÔ∏è Already contains <base> tag"
                        }
                        def updated = readFile(indexFile)
                        echo "üîç Updated content starts with:\n" + updated.take(200)
                    } else {
                        echo "‚ùå index.html NOT FOUND at expected path"
                        bat "dir /s cucumber-html-reports"
                    }
                }
            }
        }
        stage('Archive Cucumber Report') {
            steps {
                archiveArtifacts artifacts: 'cucumber-html-reports/**', fingerprint: true
            }
        }
    }
    post {
        success {
            script {
                slackSend(
                    channel: '#all-jenkins-test-reports',
                    color: 'good',
                    message: "‚úÖ Smoke Tests Passed ‚Äî ${env.JOB_NAME} #${env.BUILD_NUMBER}\n"
 + "üìÑ Report: <${env.BUILD_URL}artifact/cucumber-html-reports/index.html|Click here to see the Cucumber Report>"
                )
            }
        }
        failure {
            script {
                slackSend(
                    channel: '#all-jenkins-test-reports',
                    color: 'danger',
                    message: "‚ùå Smoke Tests Failed ‚Äî ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                )
            }
        }
    }
}
