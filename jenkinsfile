pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChiranjeeviHeggade/Cypress-Cucumber-E2E.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Run Smoke Tests') {
            steps {
                ansiColor('xterm') {
                    bat 'npm run SMOKE-CUCUMBER-CHROME'
                }
            }
        }

        stage('Archive Cucumber Report') {
            steps {
                archiveArtifacts artifacts: 'cucumber-html-reports/**', fingerprint: true
            }
        }

        stage('Publish Cucumber Report') {
            steps {
                publishHTML (target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: true,
                    keepAll: true,
                    reportDir: 'cucumber-html-reports',
                    reportFiles: 'index.html',
                    reportName: 'Cucumber Report'
                ])
            }
        }
    }

    post {
        success {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'good',
                message: "✅ Smoke Tests Passed — ${env.JOB_NAME} #${env.BUILD_NUMBER}\n" +
                         "<${env.BUILD_URL}HTML_20Report/|View Cucumber Report>"
            )
        }
        failure {
            slackSend(
                channel: '#all-jenkins-test-reports',
                color: 'danger',
                message: "❌ Smoke Tests Failed — ${env.JOB_NAME} #${env.BUILD_NUMBER}"
            )
        }
    }
}
