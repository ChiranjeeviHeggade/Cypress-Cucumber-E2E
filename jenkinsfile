pipeline {
    agent any
    tools {
        nodejs 'NodeJS'
    }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/ChiranjeeviHeggade/Cypress-Cucumber-E2E.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Smoke Tests') {
            steps {
                ansiColor('xterm') {
                    bat 'npm run SMOKE-CUCUMBER-CHROME'
                }
            }
        }
        stage('Fix & Archive Report') {
            steps {
                script {
                    // Copy report to a staging folder
                    bat 'xcopy /E /I /Y cucumber-html-reports fixed-report'
                    // Inject <base> tag into the copied version
                    def baseHref = "${env.BUILD_URL}artifact/fixed-report/"
                    def indexFile = "fixed-report\\index.html"
                    if (fileExists(indexFile)) {
                        def html = readFile(indexFile)
                        if (!html.contains('<base href=')) {
                            html = html.replaceFirst(/<head>/, "<head><base href='${baseHref}'>")
                            writeFile file: indexFile, text: html
                            echo "‚úÖ Injected <base> tag into fixed-report/index.html"
                        }
                    }
                    // Archive the modified copy
                    archiveArtifacts artifacts: 'fixed-report/**', fingerprint: true
                }
            }
        }
        stage('Archive Cucumber Report') {
            steps {
                archiveArtifacts artifacts: 'cucumber-html-reports/**', fingerprint: true
            }
        }
    }
    post {
        success {
            script {
                slackSend(
                    channel: '#all-jenkins-test-reports',
                    color: 'good',
                    message: "‚úÖ Smoke Tests Passed ‚Äî ${env.JOB_NAME} #${env.BUILD_NUMBER}\n"
 + "üìÑ Report: <${env.BUILD_URL}artifact/fixed-report/index.html|Click here to see the Cucumber Report>"
                )
            }
        }
        failure {
            script {
                slackSend(
                    channel: '#all-jenkins-test-reports',
                    color: 'danger',
                    message: "‚ùå Smoke Tests Failed ‚Äî ${env.JOB_NAME} #${env.BUILD_NUMBER}"
                )
            }
        }
    }
}
